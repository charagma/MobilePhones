@using MobilePhones.Data;
@model List<Phone>

<!DOCTYPE html>
<html>
<head>
    <title></title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<body>
    <div class="container-fluid">
        <h1><strong>eMobile</strong></h1>

        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-9">
                <div class="row">
                    @foreach (var phone in Model)
                    {
                        <div class="col-md-4">
                            <div class="center-block">
                                <img src="~/Files/@phone.Photos.ToList()[0].FileName" style="height: 200px;"/>
                            </div>
                            <br />
                            <div><a class="btn btn-default" href="@Url.Action("Specs", "Phone", new { id= phone.Id})">@phone.Name</a></div>
                            <div class="btn btn-success">@phone.Price $</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>


</body>
</html>
